<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.myappportfolio.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:text="My Nanodegree Apps"/>

        <Button
            android:id="@+id/app1"
            android:layout_width="250dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Popular Movies"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/app2"
            android:layout_width="250dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Stock Hawk"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/app3"
            android:layout_width="250dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Build it bigger"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/app4"
            android:layout_width="250dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Make your app material"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/app5"
            android:layout_width="250dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Go Ubiquitous"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/app6"
            android:layout_width="250dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Capstone"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


</LinearLayout>
