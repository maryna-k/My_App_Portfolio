<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff1"
    tools:context="com.example.android.myappportfolio.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:text="My Nanodegree Apps"/>

        <Button
            android:id="@+id/app1"
            style="@style/button"
            android:text="Popular Movies"
            />

        <Button
            android:id="@+id/app2"
            style="@style/button"
            android:text="Stock Hawk"/>

        <Button
            android:id="@+id/app3"
            style="@style/button"
            android:text="Build it bigger"/>

        <Button
            android:id="@+id/app4"
            style="@style/button"
            android:text="Make your app material"/>

        <Button
            android:id="@+id/app5"
            style="@style/button"
            android:text="Go Ubiquitous"/>

        <Button
            android:id="@+id/app6"
            style="@style/button"
            android:text="Capstone"/>

    </LinearLayout>


</LinearLayout>
